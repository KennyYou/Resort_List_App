<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kennyyou.project_1.AddResort"
    tools:showIn="@layout/activity_add_resort">
    <EditText
        android:id="@+id/edit_item1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Enter name"
        app:layout_constraintBottom_toTopOf="@+id/edit_item2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_item2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:hint="Enter Location"
        app:layout_constraintBottom_toTopOf="@+id/edit_item3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_item1" />

    <EditText
        android:id="@+id/edit_item3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Enter code #"
        app:layout_constraintBottom_toTopOf="@+id/edit_item5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_item2" />

    <EditText
        android:id="@+id/edit_item4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Enter year opened"
        app:layout_constraintBottom_toTopOf="@+id/edit_item6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_item5" />

    <EditText
        android:id="@+id/edit_item5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="16dp"
        android:hint="Enter price per night"
        app:layout_constraintBottom_toTopOf="@+id/edit_item4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_item3" />

    <EditText
        android:id="@+id/edit_item6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Enter resort fee"
        app:layout_constraintBottom_toTopOf="@+id/edit_item7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_item4" />

    <EditText
        android:id="@+id/edit_item7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Enter tax rate"
        app:layout_constraintBottom_toTopOf="@+id/edit_item8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_item6" />

    <EditText
        android:id="@+id/edit_item8"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginBottom="30dp"
        android:hint="Enter image url"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_item7" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:onClick="addItem"
        android:text="Add new resort"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_item8" />

</android.support.constraint.ConstraintLayout>
